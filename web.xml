<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
            http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
            version="3.1">
    
    <display-name>Tartaruga Cometa</display-name>
    
    <!-- Servlet das Entregas -->
    <servlet>
        <servlet-name>EntregaServlet</servlet-name>
        <servlet-class>com.tartaruga.controller.EntregaServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>EntregaServlet</servlet-name>
        <url-pattern>/entregas</url-pattern>
    </servlet-mapping>
    
    <!-- Servlet do Dashboard -->
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>com.tartaruga.controller.DashboardServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    
    <!-- Página inicial -->
    <welcome-file-list>
        <welcome-file>dashboard.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- Configuração do Banco de Dados -->
    <context-param>
        <param-name>dbURL</param-name>
        <param-value>jdbc:mysql://localhost:3306/tartaruga_cometa</param-value>
    </context-param>
    
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>root</param-value>
    </context-param>
    
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value>sua_senha_aqui</param-value>
    </context-param>
    
</web-app>